<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sayac"

            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_below="@+id/sayac"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/sayac"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="98dp"
            android:weightSum="1"
            android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="geri"
            android:background="@drawable/geri"
            android:id="@+id/button"
            android:layout_weight="0.25"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/sayac"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="85dp"
                android:background="@drawable/yenile"
                android:text="rastgele"
                android:id="@+id/button5"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="0.25" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="ileri"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/button2"
                android:background="@drawable/ileri"

                android:layout_weight="0.25" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="1"
            android:layout_below="@+id/linearLayout"
            android:id="@+id/linearLayout2">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/goster"
                android:layout_marginTop="10dp"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.76"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/button4"
            android:layout_below="@+id/sayac"
            android:layout_alignParentRight="true"
            android:background="@drawable/ekle"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right" />


</RelativeLayout>
